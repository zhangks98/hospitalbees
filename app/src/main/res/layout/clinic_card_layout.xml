<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/clinic_card_view"
    android:layout_margin="16dp"
    card_view:cardElevation="2dp"
    card_view:contentPadding="8dp"
    android:foreground="?selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/clinic_title"
            android:textSize="34sp"
            android:paddingBottom="8dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/clinic_travel_title"
            android:layout_below="@id/clinic_title"
            android:text="@string/travel_time"
            android:textSize="20sp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/clinic_queue_title"
            android:layout_below="@id/clinic_travel_title"
            android:text="@string/queue_length"
            android:textSize="20sp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/clinic_total_title"
            android:layout_below="@id/clinic_queue_title"
            android:text="@string/total_time"
            android:textSize="20sp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/clinic_travel_edit"
            android:textAlignment="textEnd"
            android:gravity="end"
            android:layout_alignTop="@id/clinic_travel_title"
            android:text="@string/travel_time"
            android:textSize="20sp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/clinic_queue_edit"
            android:textAlignment="textEnd"
            android:gravity="end"
            android:layout_alignTop="@id/clinic_queue_title"
            android:text="@string/queue_length"
            android:textSize="20sp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/clinic_total_edit"
            android:textAlignment="textEnd"
            android:gravity="end"
            android:layout_alignTop="@id/clinic_total_title"
            android:text="@string/total_time"
            android:textSize="20sp"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>